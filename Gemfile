source 'https://rubygems.org'

gem 'jekyll', '~> 4.2.0'  # Use Jekyll 4.2.x which is compatible with jekyll-sass-converter 2.x
gem 'ffi', '~> 1.15.5'  # Specify an older version of ffi
gem 'sassc', '~> 2.4.0'  # Use sassc instead of sass-embedded
gem 'jekyll-sass-converter', '~> 2.2.0'  # Use a version that works with sassc

group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-feed"
  gem "jekyll-sitemap"
end

gem "webrick", "~> 1.8"
